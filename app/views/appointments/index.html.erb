<h1>React on Rails Calendar App</h1>

<h2>Appointments</h2>

<h3>Make a new appointment</h3>

<%= form_for @appointment, remote: true do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :appointment_time %>
  <%= f.submit 'Make appointment' %>
<% end %>

<div id="appointments">
  <%= render 'appointments' %>
</div>
